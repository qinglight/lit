{
	"command":"release",
	"usage":"-cuegw",
	"description":"打包、编译、开发测试中的相关工具",
	"option":[
		{
			"op":"-u --uglify",
			"desc":"是否压缩(优化),压缩混淆js和css的内容",
			"type":"Boolean",
			"key":"uglify"
		},
		{
			"op":"--product",
			"desc":"生产环境的组合优化选项,包含压缩合并以及增加后缀策略",
			"type":"Boolean",
			"key":"product"
		},
		{
			"op":"-c --concat",
			"desc":"是否合并(优化),将资源引用合并为一份,减少http请求数",
			"type":"Boolean",
			"key":"concat"
		},
		{
			"op":"-w --watch [watch]",
			"desc":"watch功能，检测变化自动打包",
			"type":"Boolean",
			"key":"watch"
		},
		{
			"op":"-p --pack [pack]",
			"desc":"是否打成zip包",
			"type":"String",
			"key":"pack"
		},
		{
			"op":"-s --suffix",
			"desc":"是否添加反缓存后缀",
			"type":"Boolean",
			"key":"suffix"
		},
		{
			"op":"-b --brower [brower]",
			"desc":"直接打开浏览器,同时打开server",
			"type":"String",
			"key":"brower"
		},
		{
			"op":"--doc",
			"desc":"是否编译生成文档",
			"type":"Boolean",
			"key":"doc"
		},
		{
			"op":"-m --minify-image",
			"desc":"是否压缩图片",
			"type":"Boolean",
			"key":"minifyImage"
		}
	]
}